<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.OOD.malissa.shoopingcart.Activities.ProductDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/ProductName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textSize="50dp"
                android:enabled="false"
                android:editable="true"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:textColor="#af171514" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/prodDescrp"
                android:layout_marginTop="23dp"
                android:maxWidth="400dp"
                android:textAlignment="center"
                android:enabled="false"
                android:editable="true"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:textColor="#af171514"
                android:layout_below="@+id/sProductType"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/cost"
                android:textSize="15dp"
                android:enabled="false"
                android:editable="true"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:textColor="#af171514"
                android:layout_below="@+id/ctext"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/sProductType"
                android:editable="true"
                android:enabled="false"
                android:focusable="false"
                android:textColor="#af171514"
                android:background="@android:color/transparent"
                android:layout_below="@+id/ptype"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Type:"
                android:id="@+id/ptype"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/ProductName"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost:"
                android:id="@+id/ctext"
                android:layout_below="@+id/prodDescrp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:id="@+id/pricetext"
                android:layout_below="@+id/cost"
                android:layout_alignRight="@+id/ctext"
                android:layout_alignEnd="@+id/ctext"
                android:layout_marginTop="31dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/price"
                android:textSize="15dp"
                android:enabled="false"
                android:editable="true"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:textColor="#af171514"
                android:layout_below="@+id/pricetext"
                android:layout_alignLeft="@+id/cost"
                android:layout_alignStart="@+id/cost" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/quantity"
                android:textSize="15dp"
                android:enabled="false"
                android:editable="true"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:textColor="#af171514"
                android:layout_below="@+id/qtext"
                android:layout_alignLeft="@+id/ptype"
                android:layout_alignStart="@+id/ptype" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:id="@+id/qtext"
                android:layout_marginTop="27dp"
                android:layout_below="@+id/price"
                android:layout_alignRight="@+id/price"
                android:layout_alignEnd="@+id/price" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Product"
        android:id="@+id/editProd"
        android:width="280dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Product"
        android:id="@+id/removeProd"
        android:width="280dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/SaveBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView"
        android:layout_alignEnd="@+id/scrollView"
        android:width="280dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="280dp" />




</RelativeLayout>
